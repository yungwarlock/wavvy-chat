{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strict": true,
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2019",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitOverride": false,
    "resolveJsonModule": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
